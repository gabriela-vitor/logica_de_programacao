// cria um programa que leia um dado de temperatura em celsius e converta para fahrenheit e kelvin, no final mostre na tela o resultado em f e kelvin

#include <stdio.h>

int main(){
	
	int celsius, celsiustofahrenheit, celsiustokelvin;
	
	printf("temperatura do dia:\n");
	scanf("%d", &celsius);
	
	celsiustofahrenheit = celsius * 1.8 + 32;
	celsiustokelvin = celsius + 273;
	
	printf("a temperatura do dia em fahrenheit e %d\n", celsiustofahrenheit);
	printf("a temperatura do dia em kelvin e %d\n", celsiustokelvin);
	
	
	
	
	
}
