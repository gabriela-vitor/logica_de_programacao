int main(){
	double media, soma;
	int nota[4];
	int i;
	
	for(i = 0; i < 4; i++){
		printf("digite a sua nota %d:\n", i + 1);
		scanf("%d", &nota[i]);
		soma += nota[i];
		
		media = soma / 1;
	}
	
	printf("media: %2.lf\n", media / 4);
	
   
}  
